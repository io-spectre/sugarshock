# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[offline-assets.tw]
trim_trailing_whitespace = false
insert_final_newline = false

[*.y{,a}ml]
indent_style = space
